rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - kullanıcılar sadece kendi profillerini görebilir/düzenleyebilir
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Meals collection - herkes okuyabilir, sadece sahibi yazabilir
    match /meals/{mealId} {
      allow read: if true; // Herkes yemekleri görebilir
      allow create: if request.auth != null && request.auth.uid == request.resource.data.sellerId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.sellerId;
    }
    
    // Orders collection - sadece ilgili taraflar görebilir
    match /orders/{orderId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.buyerId;
    }
    
    // Messages collection - sadece ilgili taraflar
    match /messages/{messageId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.receiverId);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.senderId;
    }
  }
}










